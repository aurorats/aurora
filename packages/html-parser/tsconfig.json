{
	"extends": "../tsconfig.compilerOption.json",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"rootDir": "src",
		"composite": true,
		"declarationDir": "types",
		"tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"files": [
		"src/index.ts"
	],
	"compileOnSave": true
}
